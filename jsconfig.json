{
  "compilerOptions": {
    "module": "ES2022",
    "moduleResolution": "bundler",
    "target": "ES2022",
    "checkJs": false,
    "baseUrl": ".",
    "paths": {
      "@shared/*": ["src/shared/*"],
      "@background/*": ["src/background/*"],
      "@content/*": ["src/content-scripts/*"]
    }
  },
  "include": ["src/**/*.js", "tests/**/*.js"],
  "exclude": ["node_modules", "dist"]
}
